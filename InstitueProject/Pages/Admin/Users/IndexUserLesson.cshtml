@page "{id}"
@model InstitueProject.Pages.Admin.Users.IndexUserLessonModel
@inject Institue.Core.Services.Interface.IUserService _user;
@{
    var user = _user.GetUserById((int)ViewData["UserId"]);
    Layout = "_Layout";
 
 
    var user1 = user.FirstName + " " + user.LastName;
    if (user.IsTeacher)
    {
        var teacher = "استاد";
        user1 = teacher + " " + user.FirstName + " " + user.LastName;
    }
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Institue.Core.Convertors;
<p>لیست دروس : @user1 </p>
<a asp-page="CreateUserLesson" asp-route-id="@ViewData["UserId"].ToString()" style="color:aliceblue;" class="btn btn-primary">مدیریت دروس کاربر</a>


<div class="card-body">
    <div class="table-responsive" tabindex="1" style="overflow: hidden; outline: none;">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">شناسه درس</th>
                    <th scope="col">عنوان درس</th>

                    
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.UserLesson)
                {

                    <tr>
                        <td>@i.LessonId</td>
                        <td>@i.Lesson.LessonTitle</td>
                     

 
                    </tr>

                }

            </tbody>
        </table>

    </div>
</div>
